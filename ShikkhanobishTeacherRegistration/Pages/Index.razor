        inL2 = "Age";
        inL3 = "Institution";
        inL4 = "Phonenumber";
        in1 = "";
        in2 = "";
        in3 = "";
        in4 = "";
        checkedBlock = -1;
        buttonClassSix = "semi-transparent-button";
        buttonClassNine = "semi-transparent-button";
