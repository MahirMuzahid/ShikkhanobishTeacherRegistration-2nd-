    protected override async Task OnInitializedAsync()
    {
        StartAnim1stBlock = "text-focus-in";
        StateHasChanged();
        timer = new Timer();
        timer.Interval = 2000;
        timer.Elapsed += counter;
        timer.Start();
        op = 0;
        rightArrow = 0;
        block3 = "none";
        block1and2 = "block";
        block4 = "none";
        block5 = "none";
        clickCounter = 0;
        animClass = "";
